<%= render 'layouts/alerts' %>
<h1 class="ui center aligned icon header">
    Welcome to MessageMe - a complete Chat App
</h1>
<br><br>
<h2 class="ui center aligned big icon header">
  <i class="circular orange freebsd icon"></i>
  Log In to continue
</h2><br><br>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
        <div class="ui big form">
          <%= form_with url: login_path, local: true do |f| %>
            <div class="field">
              <%= f.label :username, class: "field" %>
              <div class="ui left icon input">
                <%= f.text_field :username, class: "form-control" %>
                <i class="user icon"></i>
              </div>
            </div>
            <div class="field">
              <%= f.label :password %>
              <div class="ui left icon input">
                <%= f.password_field :password, class: "form-control" %>
                <i class="lock icon"></i>
              </div>
            </div>
            <%= f.submit 'Login', disable_with: 'Submiting...', class: "ui big orange submit button" %>
          <% end %>   
        </div>

    </div>
    <div class="middle aligned column">
      <div class="ui big button orange">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>